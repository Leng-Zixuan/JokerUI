{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["DOM", "ES2017"],
    "types": ["Node"],
    "module": "ESNext",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "target": "ES6",
    "moduleResolution": "Node",
    "declaration": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "lib", "es"]
}
